{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Node 17",
  "extends": "@tsconfig/node17/tsconfig.json",
  "compilerOptions": {
    "lib": ["esnext"],
    "module": "commonjs",
    "target": "esnext",

    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "useDefineForClassFields": true
  }
}